const Description = "Derniers Modèles, Performances Exceptionnelles, Design Épuré"; //"Latest Models, Exceptional Performance, Sleek Design"

const cta = "Visitez-nous!"
const service1_title = "Optimisation Système"
const service2_title = "Consultation Info"
const service3_title = "Vente Matériel"
const service4_title = "Réparation PC"

const service1_description = "Accélérez votre machine pour une meilleure productivité."
const service2_description = "Conseils experts pour vos projets informatiques."
const service3_description = " Ordinateurs, composants, et accessoires performants."
const service4_description = "Diagnostics rapides et réparations efficaces."

const {mapLink} = address
---


<!-- ============================================ -->
<!--                    Hero                      -->
<!-- ============================================ -->


            <p class="text">Lorem ipsum dolor, sit Lorem ipsum dolor sit amet. amet consectetur adipisicing elit. Delectus </p>
        </div>
        <div class="feature-item">
            <p class="heading">Our Value</p>
            <p class="text">Lorem ipsum dolor,  Delectus </p>
        </div>
        <img class="image"
         src={backgroundImage.src} alt="about us image" >
         <div class="feature-contact">
            <p>hiii</p>
            <p>hiii</p>
            <p>hiii</p>
        </div>
    </section>
</section>



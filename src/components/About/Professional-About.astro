<script is:inline>
    // Dark Mode Background Gradient Controller
(function() {
    const bgImageContainer = document.querySelector('.bg-image-container');
    
    if (!bgImageContainer) {
        console.warn('Background image container not found');
        return;
    }

    // Get the original background image URL from the inline style
    const originalStyle = bgImageContainer.style.backgroundImage;
    const imageUrlMatch = originalStyle.match(/url\([^)]+\)/);
    const imageUrl = imageUrlMatch ? imageUrlMatch[0] : '';

    function updateGradient() {
        const isDarkMode = document.body.classList.contains('dark-mode');
        
        if (isDarkMode) {
            // Black gradient for dark mode
            bgImageContainer.style.backgroundImage = 
                `linear-gradient(to top right, transparent, rgba(0,0,0,0.7) 35%), ${imageUrl}`;
        } else {
            // White gradient for light mode
            bgImageContainer.style.backgroundImage = 
                `linear-gradient(to top right, transparent, rgba(255,255,255,0.9) 55%), ${imageUrl}`;
        }
    }

    // Initial check
    updateGradient();

    // Create a MutationObserver to watch for class changes on body
    const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
            if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                updateGradient();
            }
        });
    });

    // Start observing
    observer.observe(document.body, {
        attributes: true,
        attributeFilter: ['class']
    });

    // Cleanup function (optional, for when script needs to be removed)
    window.darkModeGradientCleanup = function() {
        observer.disconnect();
    };
})();
</script>